# Yun Min Trading Agent - Environment Configuration
# Copy this file to .env and fill in your values

# Exchange Configuration
YUNMIN_EXCHANGE_NAME=binance
YUNMIN_EXCHANGE_API_KEY=your_api_key_here
YUNMIN_EXCHANGE_API_SECRET=your_api_secret_here
YUNMIN_EXCHANGE_TESTNET=true

# Trading Configuration  
YUNMIN_TRADING_MODE=dry_run
YUNMIN_TRADING_SYMBOL=BTC/USDT
YUNMIN_TRADING_TIMEFRAME=5m
YUNMIN_TRADING_INITIAL_CAPITAL=10000.0

# Risk Management
YUNMIN_RISK_MAX_POSITION_SIZE=0.1
YUNMIN_RISK_MAX_LEVERAGE=3.0
YUNMIN_RISK_MAX_DAILY_DRAWDOWN=0.05
YUNMIN_RISK_STOP_LOSS_PCT=0.02
YUNMIN_RISK_TAKE_PROFIT_PCT=0.03

# Strategy Parameters
YUNMIN_STRATEGY_FAST_EMA=9
YUNMIN_STRATEGY_SLOW_EMA=21
YUNMIN_STRATEGY_RSI_PERIOD=14

# Machine Learning (Optional)
YUNMIN_ML_ENABLED=false

# LLM Integration (Optional)
YUNMIN_LLM_ENABLED=false
YUNMIN_LLM_PROVIDER=openai
YUNMIN_LLM_API_KEY=your_llm_api_key_here

# Notifications (Optional)
YUNMIN_NOTIFY_TELEGRAM_ENABLED=false
YUNMIN_NOTIFY_TELEGRAM_TOKEN=your_telegram_bot_token
YUNMIN_NOTIFY_TELEGRAM_CHAT_ID=your_chat_id

# General
YUNMIN_LOG_LEVEL=INFO
